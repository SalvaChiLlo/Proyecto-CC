{
  "realm": "realm-name",
  "auth-server-url": "server-url",
  "ssl-required": "external",
  "resource": "client-name",
  "verify-token-audience": false, // This has to be false
  "bearer-only": true, // Add this option so you can login via bearer token
  "credentials": {
    "secret": "client-credentials"
  },
  "use-resource-role-mappings": true,
  "confidential-port": 0,
  "policy-enforcer": {}
}